<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Doa Dan"
            android:textSize="30sp"
            android:layout_marginTop="40dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="10dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="dzikir "
            android:textSize="30sp"
            android:layout_marginTop="75dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="10dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            />


        <TextView
            android:id="@+id/textterakhir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="App "
            android:textSize="30sp"
            android:layout_marginTop="110dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="10dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            />

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/logo_doa"
            android:layout_toRightOf="@+id/textterakhir"
            android:layout_marginStart="80dp"/>


    </RelativeLayout>




    <TextView
        android:id="@+id/doa"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:textColor="#FE9C2A"
        android:text="Pilihan Doa dan dzikir"
        android:textSize="20dp"
        android:layout_marginTop="320dp"
        android:layout_marginStart="20dp"/>


        <Button
            android:id="@+id/Selengkapnya"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:text="Selengkapnya"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="340dp"


            />




    <ScrollView
        android:id="@+id/sv1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/doa"
        android:layout_marginTop="50dp"
        android:layout_marginStart="20dp"
        >




        <RelativeLayout
            android:id="@+id/item1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">



            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvdoa"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />



        </RelativeLayout>
    </ScrollView>



</RelativeLayout>